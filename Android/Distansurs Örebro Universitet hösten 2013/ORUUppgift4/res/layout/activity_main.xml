<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txt_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_connect"
        android:layout_alignBottom="@+id/btn_connect"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="Disconnect" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tbx_input"
        android:layout_alignBottom="@+id/tbx_input"
        android:layout_toRightOf="@+id/tbx_input"
        android:text="Send" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tbx_input"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        android:text="Connect" />

    <EditText
        android:id="@+id/tbx_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_disconnect"
        android:layout_alignLeft="@+id/txt_input"
        android:layout_marginBottom="16dp"
        android:ems="10" />

</RelativeLayout>